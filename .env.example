# Environment Variables Template
# Copy this file to .env.local for local development

# Application
NEXT_PUBLIC_APP_NAME="SupplementStore"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Configuration (for future backend integration)
# NEXT_PUBLIC_API_URL="https://api.example.com"
# API_SECRET_KEY="your-secret-key-here"

# Database (for future integration)
# DATABASE_URL="postgresql://user:password@localhost:5432/supplement_store"

# Email Service (for future integration)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-password"

# Payment Gateway (for future integration)
# STRIPE_PUBLIC_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Feature Flags
NEXT_PUBLIC_ENABLE_ADMIN_PORTAL="true"
NEXT_PUBLIC_ENABLE_CART="true"
